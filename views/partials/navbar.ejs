<div class="container">
  <div class="grid-container">
    <div class="feedback">
      
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <button class="navbar-toggler" onclick="navButton();" id="toggler-item" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span id="ChangeToggle" class="navbar-toggler-icon"></span>
          </button>
          
          <div class="navbar-collapse justify-content-between collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
              <li class="nav-item">
                <div class="nav-link" id="navbarDropdownMenu" role="group">
                  <div class="drop">
                    <div class="buttons">
                      <div class="d-flex">
                        <a href="/feedback/suggestions" class="blue <%= currentType === 'suggestions' ? 'active' : '' %>">All</a>
                        <a href="/feedback/ui" class="blue <%= currentType === 'ui' ? 'active' : '' %>">UI</a>
                        <a href="/feedback/ux" class="blue <%= currentType === 'ux' ? 'active' : '' %>">UX</a>
                      </div>
                      <div class="d-flex">
                        <a href="/feedback/enhancement" class="blue <%= currentType === 'enhancement' ? 'active' : '' %>">Enhancement</a>
                        <a href="/feedback/bug" class="blue <%= currentType === 'bug' ? 'active' : '' %>">Bug</a>
                      </div>
                    </div>
                  </div> 
                </div> 
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <nav class="navbar-expand-lg bar-container">
        <div class="container-fluid d-flex align-items-center position-relative">
          <img class="arrows" src="/assets/suggestions/icon-suggestions.svg" alt="">
          
          <div class="suggestion ms-2">
            <span><%= request.length %></span> Suggestions
          </div>

          <div class="dropdown ms-4">
             <button class="btn btn-link dropdown-toggle text-white text-decoration-none" type="button" id="sortMenu" data-bs-toggle="dropdown" aria-expanded="false">
                Sort by : <strong>Most Upvotes</strong>
             </button>
             <ul class="dropdown-menu" aria-labelledby="sortMenu">
                <li><a class="dropdown-item" href="/feedback/bug?sort=mostup">Most Upvotes</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/feedback/bug?sort=leastup">Least Upvotes</a></li>
             </ul>
          </div>

          <a class="add-feedback-top text-center" href="/feedback/new">+Add Feedback</a>
        </div>
      </nav>

    </div> 
  </div> 
</div> 